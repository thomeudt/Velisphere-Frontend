<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->

<servlet>
    <servlet-name>userdataServlet</servlet-name>
    <servlet-class>com.velisphere.tigerspice.server.UserServiceImpl</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>userdataServlet</servlet-name>
    <url-pattern>tigerspice_dev/voltUser</url-pattern>
  </servlet-mapping>

<servlet>
    <servlet-name>logdataServlet</servlet-name>
    <servlet-class>com.velisphere.tigerspice.server.LogServiceImpl</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>logdataServlet</servlet-name>
    <url-pattern>tigerspice_dev/voltLog</url-pattern>
  </servlet-mapping>

<servlet>
    <servlet-name>requestFactoryServlet</servlet-name>
    <servlet-class>com.google.web.bindery.requestfactory.server.RequestFactoryServlet</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>requestFactoryServlet</servlet-name>
    <url-pattern>tigerspice_dev/voltRequests</url-pattern>
  </servlet-mapping>



  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>TigerSpice_dev.html</welcome-file>
  </welcome-file-list>

</web-app>
