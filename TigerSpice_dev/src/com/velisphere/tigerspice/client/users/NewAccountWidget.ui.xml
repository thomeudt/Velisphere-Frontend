<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:b="urn:import:com.github.gwtbootstrap.client.ui" xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<g:HTMLPanel>

		<b:Row>
			<b:Column size="12" offset="0">
				<b:PageHeader>Create a new VeliSphere Account</b:PageHeader>
			</b:Column>
		</b:Row>

		
		
	    <b:Row>
				        
	        <b:Column size="2" offset="0">
			<b:Well>
			<b:Strong ui:field="pgpInformHeader">New Account Tasks</b:Strong>
			<b:Paragraph addStyleNames="smalltext">&nbsp;</b:Paragraph>
			<b:Paragraph addStyleNames="smalltext">Terms of Service</b:Paragraph>
			<b:Paragraph addStyleNames="smalltext">Subscription Pkans</b:Paragraph>
			<b:Paragraph addStyleNames="smalltext">Contact Sales</b:Paragraph>
			<b:Paragraph addStyleNames="smalltext">Ask for Help</b:Paragraph>
			
			</b:Well>
			</b:Column>
			
		
			<b:Column size="8" offset="0">

				<b:Form type="HORIZONTAL">

					<b:Alert type="ERROR" close="false" ui:field="aleError" >
						
					</b:Alert>

<b:Fieldset>
    <b:ControlGroup>
					<b:ControlLabel>Name</b:ControlLabel>

					<b:Controls>
					<b:TextBox b:id="txtUsername" ui:field="txtUsername" />

					</b:Controls>
	</b:ControlGroup>
  
<b:ControlGroup>
					<b:ControlLabel>E-Mail Address</b:ControlLabel>

					<b:Controls>
					<b:TextBox b:id="txtEmail" ui:field="txtEmail" />

					</b:Controls>
	</b:ControlGroup>
    
    	
	<b:ControlGroup>			
					<b:ControlLabel>Password</b:ControlLabel>
						<b:Controls>
						<b:PasswordTextBox b:id="txtPassword" ui:field="txtPassword" />
					</b:Controls>
	</b:ControlGroup>

		<b:ControlGroup>			
					<b:ControlLabel>Please enter the text show in the image below.</b:ControlLabel>
						<b:Controls>
						
						<b:TextBox ui:field="txtCaptchaWord"></b:TextBox>
												
					</b:Controls>
					
	</b:ControlGroup>
	<b:ControlGroup>			
					<b:ControlLabel>Captcha is used to prevent bots from signing up.</b:ControlLabel>
						<b:Controls>
						<b:Image ui:field="imgCaptchaImage"></b:Image>											
					</b:Controls>
					
	</b:ControlGroup>
	
	
	
	
	
  				
<b:ControlGroup>
    		<b:Controls>
				
					<b:CheckBox ui:field="cbxAgreeTandC">I agree with the Terms of Use</b:CheckBox>
	</b:Controls>
	</b:ControlGroup>
<b:ControlGroup>
    		<b:Controls>

					<b:Button styleName="btn btn-primary" text="Create Account" ui:field="btnLogin" />
						</b:Controls>
	</b:ControlGroup>
  				
</b:Fieldset>
  			</b:Form>

			</b:Column>
		</b:Row>



	</g:HTMLPanel>
</ui:UiBinder> 
