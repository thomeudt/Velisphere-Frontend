<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:container="urn:import:com.sencha.gxt.widget.core.client.container"
	xmlns:gxt="urn:import:com.sencha.gxt.widget.core.client" xmlns:button="urn:import:com.sencha.gxt.widget.core.client.button"
	xmlns:vs='urn:import:com.velisphere.tigerspice.client.spheres' xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:b="urn:import:com.github.gwtbootstrap.client.ui" 
	xmlns:vssb="urn:import:com.velisphere.tigerspice.client.sidebars">
	<ui:with field='res' type='com.velisphere.tigerspice.client.images.Images'/>

	<g:HTMLPanel>
	     <b:Breadcrumbs divider=">" ui:field="brdMain">
		</b:Breadcrumbs>
		<b:Row>
			
		
		   	<b:Column size="12" offset="0">
				<b:PageHeader>Endpoint Manager</b:PageHeader>
			</b:Column>
		</b:Row>

		
		
		
		<b:Row>

		
		
		

			<b:Column size="10" offset="0">
			   
			<b:TabPanel tabPosition="above" ui:field="tabPanel">
		
		    <b:TabPane heading="My Private Spheres" active="true">

		        
			
		   

					<b:Row>
							<b:Column size="4">
								<b:ListBox styleName="span4" ui:field="lstPrivateSpheres" />
							</b:Column>
						</b:Row>		
			    
						
						
						<b:Row>
							<b:Column size="2" offset="0">
								<b:Button type="PRIMARY" ui:field="btnOpenSphere"
									addStyleNames="btn-block" size="SMALL">Open Selected Sphere</b:Button>
							</b:Column>
							<b:Column size="2" offset="0">
								<b:Button type="SUCCESS" ui:field="btnCreateNewSphere"
									addStyleNames="btn-block" size="SMALL">Create New Sphere</b:Button>
							</b:Column>						

						</b:Row>
						
					
						
						<b:HelpBlock addStyleNames="smalltext">Physical Endpoints:</b:HelpBlock>
						<b:HelpBlock addStyleNames="smalltext">Virtual Endpoints:</b:HelpBlock>
						<b:HelpBlock addStyleNames="smalltext">Endpoint Groups:</b:HelpBlock>
										

			
			</b:TabPane>
			

			<b:TabPane heading="Public Spheres" active="false">
		    
			<b:Column size="4" offset="0">
						<b:Heading size="3">Public Spheres</b:Heading>
						<b:HelpBlock addStyleNames="smalltext">These are Spheres of users that contain endpoints
							available to you. Mechanism: by User ---> by Sphere ---> by Device</b:HelpBlock>


			</b:Column>
			</b:TabPane>
			</b:TabPanel>
			</b:Column>
			
			<b:Column size="2" offset="0">
			    
			    
			  <vssb:General></vssb:General>
			
			</b:Column>	
			

		</b:Row>





	</g:HTMLPanel>
</ui:UiBinder>