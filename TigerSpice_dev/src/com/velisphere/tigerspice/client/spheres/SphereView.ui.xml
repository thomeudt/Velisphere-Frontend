<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"  xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
	xmlns:vsep='urn:import:com.velisphere.tigerspice.client.endpoints'
	xmlns:vssp='urn:import:com.velisphere.tigerspice.client.spheres'>
	<ui:style>
		
	</ui:style>
	<g:HTMLPanel>
	    
	    <b:Breadcrumbs divider=">" ui:field="brdMain">
		</b:Breadcrumbs>
	    <b:Row>
			<b:Column size="1" offset="0">
			    <b:Image url="./images/sphere_green.png" />
			</b:Column>
			<b:Column size="7" offset="0">
				<b:PageHeader ui:field="pghSphereNameHeader">Sphere</b:PageHeader>
			</b:Column>
		</b:Row>
		
	    
	    <b:Row>
				        
	        <b:Column size="2" offset="0">
			<b:Well>
			<b:Strong ui:field="pgpInformHeader">Sphere Information</b:Strong>
			<b:Paragraph addStyleNames="smalltext">Geo location:</b:Paragraph>
			<b:Paragraph addStyleNames="smalltext">Endpoint #:</b:Paragraph>
			<b:Paragraph addStyleNames="smalltext">Critical Endpoints:</b:Paragraph>
			<b:Paragraph addStyleNames="smalltext">Add Endpoint:</b:Paragraph>
			<b:Button type="SUCCESS" size="MINI">Autoprovisioned</b:Button>
			</b:Well>
			</b:Column>
				        
			
			<b:Column size="9" offset="0">
		
					<b:Row>
				    <b:Column size="9" offset="0">
				    <vssp:SphereEditorWidget ui:field="sphereEditor" />
				    </b:Column>
					</b:Row>		
				
					
					
			
			</b:Column>
		</b:Row>
	    
		
	
	</g:HTMLPanel>
</ui:UiBinder> 
