<?xml version="1.0" encoding="UTF-8"?>
<!--
	When updating your version of GWT, you should also update this DTD reference,
	so that your app can take advantage of the latest GWT module capabilities.
-->
<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit 2.5.1//EN"
  "http://google-web-toolkit.googlecode.com/svn/tags/2.5.1/distro-source/core/src/gwt-module.dtd">
<module rename-to='tigerspice_dev'>
	<!-- Inherit the core Web Toolkit stuff.                        -->
	<inherits name='com.google.gwt.user.User' />
	

	<!-- Inherit the default GWT style sheet.  You can change       -->
	<!-- the theme of your GWT application by uncommenting          -->
	<!-- any one of the following lines.                            -->
	<!--   <inherits name='com.google.gwt.user.theme.clean.Clean'/> -->
<!-- 	<inherits name='com.google.gwt.user.theme.standard.Standard' /> -->
	<inherits name ="com.github.gwtbootstrap.Bootstrap"/>
	<!--   <inherits name='com.google.gwt.user.theme.chrome.Chrome'/> -->
	<!--   <inherits name='com.google.gwt.user.theme.dark.Dark'/>     -->
    <inherits name='com.sencha.gxt.ui.GXT'/>
	<!-- Other module inherits                                      -->
	<inherits name='com.google.web.bindery.requestfactory.RequestFactory' />
	<inherits name='com.orange.links.Links' />
    <inherits name='com.google.gwt.widgetideas.WidgetIdeas' />   
    <inherits name='com.google.gwt.libideas.LibIdeas' />
	
	<!-- Specify the app entry point class.                         -->
<!-- 	<entry-point class='com.velisphere.tigerspice.client.TigerSpice_dev' /> -->

	<!-- Specify the paths for translatable code                    -->
	<source path='client' />
	<source path='shared' />
	<entry-point class="com.velisphere.tigerspice.client.Start" />
	<set-property name="bootstrap.responsiveDesign" value="true"/>
	
	<source path='resources'/>
    <replace-with class="com.velisphere.tigerspice.resources.TigerspiceConfigurator">
      <when-type-is class="com.github.gwtbootstrap.client.ui.config.Configurator"/>
    </replace-with>
    <public path="resources">
      <exclude name="** /*.java"/>
      <exclude name="** /*.class"/>
    </public>
	
</module>
